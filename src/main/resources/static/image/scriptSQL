#------------------------------------------------------------
#        Script MySQL.
#------------------------------------------------------------


#------------------------------------------------------------
# Table: Pokemon
#------------------------------------------------------------

CREATE TABLE Pokemon(
        idPokemon  Int  Auto_increment  NOT NULL ,
        nomPokemon Varchar (50) NOT NULL ,
        nomEvol1   Varchar (50) ,
        nomEvol2   Varchar (50)
	,CONSTRAINT Pokemon_PK PRIMARY KEY (idPokemon)
)ENGINE=InnoDB;


#------------------------------------------------------------
# Table: Type
#------------------------------------------------------------

CREATE TABLE Type(
        idType       Int  Auto_increment  NOT NULL ,
        nomType      Varchar (50) NOT NULL ,
        attaqueIm1   Varchar (50) ,
        attaqueIm2   Varchar (50) ,
        attaqueChar1 Varchar (50) ,
        attaqueChar2 Varchar (50)
	,CONSTRAINT Type_PK PRIMARY KEY (idType)
)ENGINE=InnoDB;


